<h2>title</h2>
<li><%= @live.title %></li>

<h2>place</h2>
<li><%= @live.place %><li>

<h2>date</h2>
<li><%= @live.date %></li>

<h2>extra</h2>
<li><%= @live.body %></li>



<% if @live.user_id == current_user.id %>
	<li><%=link_to "編集", edit_life_path(@live.id) %></li>
	<li><%= link_to "削除", life_path(@live.id), method: "delete", class: "btn destroy-btn", "data-confirm" => "本当に削除しますか？" %></li>
<% else %>

	<li><% if @join.blank? %>
			<%= link_to "コミュニティに参加する", life_join_index_path(@live), method: :post %>
		<% else %>
			<% if @join.accepted %>
				<%= link_to "コミュニティを退会する", life_join_path(@join.id), method: :delete %>
			<% else %>
		    	<li>申請中</li> 
			<% end %>
		<% end %>	
	</li>
<% end %>